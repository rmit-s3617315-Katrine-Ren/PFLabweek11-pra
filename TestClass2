            System.out.prinf("attendees[%d] refers to a Contract Employee object," i);
            
             System.out.println(attendees[i].getTFN());// the getTFN( ){ return taxFileNumber;} should be created in the Employee class
            }
            
            // use 'instanceof' make sure the right can get access to the method
